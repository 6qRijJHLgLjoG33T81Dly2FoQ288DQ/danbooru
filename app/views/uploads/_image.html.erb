<% if params[:url] %>
  <%= image_tag(image_proxy_uploads_path(:url => @normalized_url, :ref => params[:ref]), :title => "Preview", :id => "image") %>

  <ul>
    <% if @remote_size %>
      <li><strong>Size:</strong> <%= number_to_human_size(@remote_size) %></li>
    <% end %>

    <% if params[:ref] %>
      <li><strong>Referrer:</strong> <%= params[:ref] %></li>
    <% end %>

    <li id="scale"></li>
  </ul>
<% end %>
